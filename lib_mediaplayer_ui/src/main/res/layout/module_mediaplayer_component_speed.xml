<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:focusable="false">

    <!-- 背景 -->
    <View
        android:id="@+id/module_mediaplayer_component_speed_bg"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:visibility="gone"
        android:layout_marginRight="30dp"
        android:background="@drawable/module_mediaplayer_shape_speed_bg"
        android:focusable="false" />

    <!-- 转圈 -->
    <lib.kalu.mediaplayer.widget.loading.MediaProgressBar
        android:id="@+id/module_mediaplayer_component_speed_pb"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="38dp"
        android:layout_marginRight="85dp"
        android:focusable="false"
        android:indeterminateDuration="2000"
        app:mpb_color_round="#ffffff"
        app:mpb_count="8"
        app:mpb_radius="4dp"
        app:mpb_rate="0.9" />

    <!-- 网速 -->
    <TextView
        android:id="@+id/module_mediaplayer_component_speed_txt"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="38dp"
        android:focusable="false"
        android:visibility="gone"
        android:gravity="bottom|left"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/module_mediaplayer_component_speed_unit"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="58dp"
        android:layout_marginRight="38dp"
        android:focusable="false"
        android:gravity="top|left"
        android:visibility="gone"
        android:textColor="#ffffff"
        android:textSize="10sp" />

</RelativeLayout>
