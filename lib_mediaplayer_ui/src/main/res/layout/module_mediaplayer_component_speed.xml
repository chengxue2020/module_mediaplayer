<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:focusable="false">

    <!-- 背景 -->
    <View
        android:id="@+id/module_mediaplayer_component_speed_bg"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="#33000000"
        android:focusable="false"
        android:visibility="gone" />

    <!-- 转圈 -->
    <lib.kalu.mediaplayer.widget.MediaProgressBar
        android:id="@+id/module_mediaplayer_component_speed_pb"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:layout_marginRight="80dp"
        android:focusable="false"
        android:indeterminateDuration="2000"
        android:visibility="gone"
        app:mpb_color_round="#ffffff"
        app:mpb_count="8"
        app:mpb_radius="10dp"
        app:mpb_rate="0.9" />

    <!-- 网速 -->
    <TextView
        android:id="@+id/module_mediaplayer_component_speed_txt"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:layout_marginRight="30dp"
        android:focusable="false"
        android:visibility="gone" />

</RelativeLayout>
