<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cccccc">

    <lib.kalu.mediaplayer.widget.player.PlayerLayout
        android:id="@+id/module_mediaplayer_test_video"
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/module_mediaplayer_test_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:text="换台" />

        <Button
            android:id="@+id/module_mediaplayer_test_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:text="全屏" />

        <Button
            android:id="@+id/module_mediaplayer_test_button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:text="浮动" />

        <Button
            android:id="@+id/module_mediaplayer_test_button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:text="show-component" />

        <Button
            android:id="@+id/module_mediaplayer_test_button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:text="gone-component" />

    </LinearLayout>

</RelativeLayout>