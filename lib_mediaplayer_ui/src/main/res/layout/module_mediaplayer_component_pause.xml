<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:focusable="false">

    <ImageView
        android:id="@+id/module_mediaplayer_component_pause_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false"
        android:visibility="gone" />

    <!-- 提示 -->
    <TextView
        android:id="@+id/module_mediaplayer_component_pause_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:focusable="false"
        android:text="@string/module_mediaplayer_string_pause"
        android:textColor="@color/module_mediaplayer_color_ffffff"
        android:textSize="22sp"
        android:visibility="gone" />

</RelativeLayout>